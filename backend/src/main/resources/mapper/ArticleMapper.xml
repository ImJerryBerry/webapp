<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.webapp.dao.ArticleDao">
    
    <resultMap id="ArticleResultMap" type="com.example.webapp.entity.Article">
        <id column="id" property="id" />
        <result column="author_username" property="authorUsername" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, author_username, title, content, create_time, update_time
    </sql>

    <select id="findAll" resultMap="ArticleResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM articles
        ORDER BY id ASC
    </select>

    <select id="findByAuthor" resultMap="ArticleResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM articles
        WHERE author_username = #{authorUsername}
        ORDER BY id ASC
    </select>

    <select id="findById" resultMap="ArticleResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM articles 
        WHERE id = #{id}
    </select>
    
    <select id="countByAuthor" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM articles WHERE author_username = #{authorUsername}
    </select>

    <insert id="insert" parameterType="com.example.webapp.entity.Article">
        INSERT INTO articles (author_username, title, content)
        VALUES (#{authorUsername}, #{title}, #{content})
    </insert>

    <update id="update" parameterType="com.example.webapp.entity.Article">
        UPDATE articles
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM articles WHERE id = #{id}
    </delete>
</mapper> 